package entity;

import java.util.ArrayList;
import java.util.List;

public class Tutors {
    private String tutorName;
    private List<Course> coursesList;

    // Static list of tutors shared among all instances
    private static List<Tutors> tutorList = new ArrayList<>();

    // Getter for the tutor list
    public static List<Tutors> getTutorList() {
        return tutorList;
    }

    // Setter for the tutor list
    public static void setTutorList(List<Tutors> tutorList) {
        Tutors.tutorList = tutorList;
    }

    // Constructor
    public Tutors(String tutorName) {
        this.tutorName = tutorName;
        this.coursesList = new ArrayList<>();
    }

    // Getter for tutor name
    public String getTutorName() {
        return tutorName;
    }

    // Setter for tutor name
    public void setTutorName(String tutorName) {
        this.tutorName = tutorName;
    }

    // Getter for courses list
    public List<Course> getCourses() {
        return coursesList;
    }

    // Method to add a course
    public void addCourse(Course course) {
        if (!coursesList.contains(course)) {
            coursesList.add(course);
            course.addTutor(this); // Add this tutor to the course's tutor list
        }
    }

    // Method to remove a tutor
    public void removeTutor(String tutorName) {
        Tutors tutorToRemove = findTutorByName(tutorName);
        if (tutorToRemove != null) {
            tutorList.remove(tutorToRemove);
            System.out.println("Tutor removed successfully.");
        } else {
            System.out.println("Tutor with name " + tutorName + " not found.");
        }
    }

    // Method to find a tutor by name
    private Tutors findTutorByName(String tutorName) {
        for (Tutors tutor : tutorList) {
            if (tutor.getTutorName().equals(tutorName)) {
                return tutor;
            }
        }
        return null;
    }
}
